{
    "name": "@app/server",
    "version": "1.0.0",
    "description": "",
    "author": "MilkeeyCat",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "npx prisma generate --schema ./prisma/schema.prisma && pnpm run proto:generate && nest build",
        "format": "prettier \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "npx prisma generate && npx prisma db push --schema ./prisma/schema.prisma && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "proto:generate": "protoc --plugin=\"./node_modules/.bin/protoc-gen-ts_proto\" --ts_proto_opt=esModuleInterop=true --experimental_allow_proto3_optional --ts_proto_opt=oneof=unions --ts_proto_out=\"./src/protos\" --proto_path=\"./protos\" protos/*.proto"
    },
    "dependencies": {
        "@app/shared": "^1.0.0",
        "@nestjs-modules/mailer": "^1.10.3",
        "@nestjs/common": "^10.1.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.1.0",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/platform-express": "^10.1.0",
        "@nestjs/platform-socket.io": "^10.1.0",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/websockets": "^10.1.0",
        "@prisma/client": "^5.0.0",
        "argon2": "^0.30.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "ejs": "^3.1.10",
        "jsonwebtoken": "^9.0.1",
        "long": "^5.2.3",
        "nest-winston": "^1.9.4",
        "nestjs-cls": "^3.6.0",
        "nestjs-i18n": "^10.4.0",
        "nodemailer": "^6.9.7",
        "prisma": "^5.0.0",
        "protobufjs": "^7.2.5",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "socket.io": "^4.7.1",
        "ts-proto": "^1.163.0",
        "uuid": "^9.0.0",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.10",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.1.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.3",
        "@types/multer": "^1.4.7",
        "@types/node": "20.4.4",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "@typescript-eslint/parser": "^6.1.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "29.6.1",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.1.6"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
